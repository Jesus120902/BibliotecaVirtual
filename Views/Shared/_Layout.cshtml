<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - T3_Grupo3_Augusto_Alcarras</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <!-- Header con Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Biblioteca Virtual</a>

            <!-- Botón de menú para pantallas pequeñas -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menú principal de navegación -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Libro")">Lista de Libros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Crear", "Libro")">Agregar Nuevo Libro</a>
                    </li>
                    <!-- Pestañas adicionales -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Arquitectura", "Libros")">Libros de Arquitectura de Software</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Diseno", "Libros")">Libros de Diseño de Software</a>
                    </li>
                </ul>
                <!-- Agregar el LoginPartial para autenticación -->
                <div class="d-flex align-items-center ml-3">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal -->
    <div class="container my-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer bg-primary text-white text-center py-3 mt-auto">
        <div class="">
            &copy; @(DateTime.Now.Year) - T3_Grupo3_Augusto_Alcarras - Todos los derechos reservados.
        </div>
    </footer>

    <!-- Scripts necesarios (jQuery, Bootstrap, etc.) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
