@model Libro

@{
    ViewData["Title"] = "Agregar Libro";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Crear" method="post" class="p-4 shadow rounded bg-white">
                <h3 class="text-center mb-4">Ingresa los detalles del nuevo libro</h3>
                <hr />

                <!-- Campo Título -->
                <div class="form-group mb-3">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ingrese el título del libro" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <!-- Campo Autor -->
                <div class="form-group mb-3">
                    <label asp-for="Autor" class="form-label">Autor</label>
                    <input asp-for="Autor" class="form-control" placeholder="Ingrese el nombre del autor" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>

                <!-- Campo Tema -->
                <div class="form-group mb-3">
                    <label asp-for="Tema" class="form-label">Tema</label>
                    <input asp-for="Tema" class="form-control" placeholder="Ingrese el tema del libro" />
                    <span asp-validation-for="Tema" class="text-danger"></span>
                </div>

                <!-- Campo Editorial -->
                <div class="form-group mb-3">
                    <label asp-for="Editorial" class="form-label">Editorial</label>
                    <input asp-for="Editorial" class="form-control" placeholder="Ingrese la editorial del libro" />
                    <span asp-validation-for="Editorial" class="text-danger"></span>
                </div>

                <!-- Campo Año de Publicación -->
                <div class="form-group mb-3">
                    <label asp-for="AnioPublicacion" class="form-label">Año de Publicación</label>
                    <input asp-for="AnioPublicacion" class="form-control" placeholder="Ingrese el año de publicación" />
                    <span asp-validation-for="AnioPublicacion" class="text-danger"></span>
                </div>

                <!-- Campo Páginas -->
                <div class="form-group mb-3">
                    <label asp-for="Paginas" class="form-label">Páginas</label>
                    <input asp-for="Paginas" class="form-control" placeholder="Ingrese el número de páginas" />
                    <span asp-validation-for="Paginas" class="text-danger"></span>
                </div>

                <!-- Campo Categoría -->
                <div class="form-group mb-3">
                    <label asp-for="Categoria" class="form-label">Categoría</label>
                    <input asp-for="Categoria" class="form-control" placeholder="Ingrese la categoría del libro" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary w-50">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary w-50 ms-3">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
