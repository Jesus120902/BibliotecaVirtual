@model Libro

@{
    ViewData["Title"] = "Eliminar Libro";
}

<h2>Eliminar Libro</h2>

<h3>¿Está seguro que desea eliminar este libro?</h3>
<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Autor</dd>
        <dt class="col-sm-2">Tema</dt>
        <dd class="col-sm-10">@Model.Tema</dd>
        <dt class="col-sm-2">Editorial</dt>
        <dd class="col-sm-10">@Model.Editorial</dd>
        <dt class="col-sm-2">Año de Publicación</dt>
        <dd class="col-sm-10">@Model.AnioPublicacion</dd>
        <dt class="col-sm-2">Páginas</dt>
        <dd class="col-sm-10">@Model.Paginas</dd>
        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Categoria</dd>
    </dl>
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
