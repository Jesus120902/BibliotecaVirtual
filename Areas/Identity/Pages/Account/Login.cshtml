@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Formulario de Inicio de Sesión -->
            <div class="col-md-6">
                <section>
                    <form id="formLogin" method="post" class="p-4 shadow rounded bg-white">
                        <h2 class="text-center mb-4">Usa tu cuenta local para iniciar sesión</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Campo de Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Input.Email" class="form-label">Correo Electrónico</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="correo@ejemplo.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Campo de Contraseña -->
                        <div class="form-group mb-3">
                            <label asp-for="Input.Password" class="form-label">Contraseña</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Contraseña" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Recordarme -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">Recordarme</label>
                        </div>

                        <!-- Botón de Inicio de Sesión -->
                        <div>
                            <button id="botonLogin" type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                        </div>

                        <!-- Enlaces adicionales -->
                        <div class="mt-3">
                            <p>
                                <a id="olvido-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regístrate como un nuevo usuario</a>
                            </p>
                            <p>
                                <a id="reenviar-confirmacion" asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
